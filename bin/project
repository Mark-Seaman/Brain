#!/bin/bash
# Start working on the simple project

# Vars
export p=~/Projects/brain
export ph=seaman@markseaman.org
export port=8011
export pa=$p/app
export pb=$p/bin
export pd=$p/doc
export pt=$p/test
export x=~/Projects/thumper

# Aliases
alias proot="cd $p"
alias papp="cd $pa"
alias pbin="cd $pb"
alias pdoc="cd $pd"
alias ptest="cd $pt"
alias eapp="e $pa"
alias ebin="e $pb"
alias edoc="e $pd"
alias etest="e $pt"
alias tres='tresults'
alias s='search'
alias syncdb='cd $pa && manage.py syncdb'

# Path
export PATH=\
$pb:\
$pt:\
/usr/bin:\
/sbin:\
/bin:\
~/bin:\
.
export _OLD_VIRTUAL_PATH=$PATH


# Directory
cd $p
cat $p/bin/welcome

# Use virtualenv
[ -f $p/env/bin/activate ] && . $p/env/bin/activate
echo "python = `which python`"
echo 
path

# Status
git status

